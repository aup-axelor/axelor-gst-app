<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">


	<grid title="Invoice" name="invoice-grid" model="com.axelor.gst.db.Invoice">
		<field name="status" />
		<field name="reference"/>
		<field name="invoiceDate"/>
		<field name="company"/>
		<field name="isUseInvocieAddressAsShipping"/>
		<field name="netAmount"/>
		<field name="netIgst"/>
		<field name="netCsgt"/>
		<field name="netSgst"/>
		<field name="grossAmount"/>
	</grid>
	<form title="Invoice" name="invoice-form" model="com.axelor.gst.db.Invoice">
		<panel name="statusPanel" title="Status">
			<field name="status" selection="invoice-type" widget="NavSelect"/>
		</panel>
		<panel sidebar="true" title="Change Status" hideIf="status=='Paid'">
			<button onClick="" name="statusDraft" title="Draft" hideIf="status == 'Draft' || status == 'Paid'"/>
			<button onClick="" name="statusValidate" title="Validate" hideIf="status=='Validate'|| status=='Paid' || status=='Cancelled'"/>
			<button onClick="" name="statusPaid" title="Paid" hideIf="status=='Cancelled'"/>
			<button onClick="" name="statusCancel" title="Cancel" hideIf="status=='Paid'"/>
		</panel>
		<panel title="Overview">
			<field name="reference"/>
			<field name="company"/>
			<field name="invoiceDate"/>
			<field name="priority"/>
			<field name="party"/>
			<field name="partyContact"/>
			<field name="invoiceAddress"/>
			<field name="shippingAddress"/>
			<field name="isUseInvocieAddressAsShipping"/>
			<field name="netAmount"/>
			<field name="netIgst"/>
			<field name="netCsgt"/>
			<field name="netSgst"/>
			<field name="grossAmount"/>
		</panel>
		<panel-related field="invoiceItemsList"
					   grid-view="invoiceLine-grid" form-view="invoiceLine-form" colSpan="12"/>
	</form>

  	<kanban columnBy="status" model="com.axelor.gst.db.Invoice" sequenceBy="priority" title="Invoice" name="invoice-kanban">
  		<field name="invoiceDate"></field>
	    <field name="priority"></field>
	    <field name="party"></field>
	    <field name="invoiceAddress"></field>
	
	    <template><![CDATA[
	      <i class='fa fa-clock-o'></i><h4>{{dateT}}</h4>
	    <div class="card-body">{{party.name}}</div>
	    <div class="card-footer">
	     <span>{{invoiceAddress.line1}}</span>
	    </div>
    		]]>
    </template>
  	
  	</kanban>
  
  </object-views>