<?xml version="1.0" encoding="UTF-8"?>
<domain-models
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://axelor.com/xml/ns/domain-models"
        xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_5.4.xsd">

    <module name="invoice" package="com.axelor.gst.db"/>

    <entity name="Invoice">
        <string name="status" title="Status" readonly="true" selection="invoice-type"/>
        <many-to-one name="company" ref="com.axelor.gst.db.Company" title="Company"/>
        <string name="reference" title="Reference" readonly="true"/>
        <datetime name="invoiceDate" title="Date"/>
        <integer name="priority" title="Priority"/>
        <many-to-one name="party" ref="com.axelor.gst.db.Party" title="Party"/>
        <many-to-one name="partyContact" ref="com.axelor.gst.db.Party" title="Party Contact"/>
        <many-to-one name="invoiceAddress" ref="com.axelor.gst.db.Address" title="Invoice Address"/>
        <boolean name="invoiceAsShippingAddress" title="Use Invoice as Shipping Address" default="True"/>
        <many-to-one name="shippingAddress" ref="com.axelor.gst.db.Address" title="Shipping Address"/>
        <one-to-many name="invoiceItem" ref="com.axelor.gst.db.InvoiceLine" title="Invoice Items" mappedBy="invoice"/>
        <decimal name="netAmount" title="Net Amount" readonly="true"/>
        <decimal name="netIgst" title="Net IGST" readonly="true"/>
        <decimal name="netCgst" title="Net CGST" readonly="true"/>
        <decimal name="netSgst" title="Net SGST" readonly="true"/>
        <decimal name="grossAmount" title="Gross Amount" readonly="true"/>
    </entity>

</domain-models>